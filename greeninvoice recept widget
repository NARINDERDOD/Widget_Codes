  <option value="×”×¢×‘×¨×” ×‘× ×§××™×ª" ${data.paymentType === "×”×¢×‘×¨×” ×‘× ×§××™×ª" ? "selected" : ""}>×”×¢×‘×¨×” ×‘× ×§××™×ª (Wire-transfer)</option>
  <option value="×¤×™×™×¤××œ" ${data.paymentType === "×¤×™×™×¤××œ" ? "selected" : ""}>×¤×™×™×¤××œ (Paypal)</option>
